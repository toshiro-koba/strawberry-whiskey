<h1>タスク一覧</h1>

<table>
  <tr>
    <th>完了</th>
    <th>タイトル</th>
    <th>詳細</th>
    <th>締切日</th>
  </tr>

  <% @tickets.each do |t| %>
    <tr>
      <td>
        <%= check_box nil, nil, { checked: t.is_completed , readonly: true }, true, false %>
      </td>
      <td><%= t.title %></td>
      <td><%= t.body %></td>
      <td><%= t.due_date %></td>
    </tr>
  <% end%>
</table>

<%= link_to '新規登録', new_ticket_path, class: 'btn btn-primary' %>
